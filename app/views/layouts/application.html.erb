<!DOCTYPE html>
<html>
  <head>
    <title>CaHackathonProject</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <li><h1><%= link_to "Flotsy", root_path %></h1></li>
        <% if @profile %>
          <li><%= link_to 'My Conversations', conversations_path %></li>
        <% end %>
      </ul>
      <ul>
        <% if @profile.nil? %>
          <li><%= link_to 'Sign Up', new_user_registration_url %></li>
          <li><%= link_to 'Log In', new_user_session_url %></li>
        <% else %>
          <li><%= link_to "#{@profile.first_name} #{@profile.last_name}", edit_profile_url %></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
