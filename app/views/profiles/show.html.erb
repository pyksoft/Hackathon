<section class="row profile_header">
    <div class="col row profile_info">
        <% if @profile.photo_url(:thumb).present? %>
            <div class="col profile_photo" style="<%= style_backgound_image(@profile.photo_url(:thumb)) unless @profile.nil? %>">
        <% else %>
            <div class="col profile_photo" style="background-image: url(<%= image_url(@profile.image_url)%>);"></div>
        <% end %>
        <!-- <% if @profile.photo_url(:original) %>
            <%= image_tag @profile.photo_url(:original) %>
        <% end %> -->
        </div>
        <div class="col profile_name">
            <h1><%= "#{@profile.full_name}" %></h1>
        </div>
    </div>
  </div>
</section>

<section class="row main">
  <div class="col have">
    <div class="items_block">
      <h3>Things I own</h3>
      <% @no_trade_owned_products.each do |item| %>
