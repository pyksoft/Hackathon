            <div class="col-2 item_photo"></div>
            <div class="col item_description">
              <h4><%= item.name %></h4>
            </div>
          </div>
        </a>
        <% end %>
    </div>

    <div class="items_block">
      <h3>Skills/Experiences I am good at</h3>
